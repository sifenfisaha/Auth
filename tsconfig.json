{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": ".", // ✅ Set to project root
    "outDir": "dist", // ✅ All compiled files go here
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true // Optional: generate .d.ts files for publishing
  },
  "exclude": ["node_modules"],
  "include": ["src", "index.ts"]
}
